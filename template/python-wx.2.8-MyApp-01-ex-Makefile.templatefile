main      = main.py
scripts   = MyApp.py

bitecode  = $(scripts:.py=.pyc)

# -------------------------------------------------------------------------- #
# -------------------------------------------------------------------------- #
# -------------------------------------------------------------------------- #
PYTHON    = python

##############################################################################

# -------------------------------------------------------------------------- #
# -------------------------------------------------------------------------- #
# -------------------------------------------------------------------------- #

checkfile=.pipeline_up_to_date

$(checkfile): $(scripts)
	@touch $(checkfile)
	$(PYTHON) $(scripts)

default: $(checkfile)

main :
	$(PYTHON) $@.py

clean:
	rm -rf $(bitecode)
	@rm -rf $(checkfile)
