n=new
mkdir $o; hw -C > $o/exemplo.c
cp -r $o new

sed 's/hello, world/alterado/' -i $n/exemplo.c
hw --lang tex > $n/doc.tex

diff -uNr $o $n > new.patch

echo transforma $o em $n
echo entre em $o e execute o seguinte comendo:
echo 'patch -p1 < new.patch'

