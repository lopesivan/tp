#!/bin/bash
# ----------------------------------------------------------------------------
rm frame-*
count=1

#for frame in $(echo frame-{1..99}.tex| sed ":a;s/\([^0-9]\)\([0-9]\{1,2\}\.\)/\10\2/;ta");
for frame in $(echo frame-{1..9}.tex| sed ":a;s/\([^0-9]\)\([0-9]\{1,2\}\.\)/\10\2/;ta");
do
	__frame=${frame##frame-}
	__frame=${__frame%.tex}

	let count++

	if (( count == 1 ));
	then
		echo $count
# 		cat << EOF > $frame
# %%% --------------------------------------------------------------------------
# \\mypart{Minha parte $count}
# %-----------------------------------------------------------------------------
#
# %%% --------------------------------------------------------------------------
# \\section{Secao $count}
# %-----------------------------------------------------------------------------
#
# %%% --------------------------------------------------------------------------
# \\mysubsection{Sub Secao $count $count}
# %-----------------------------------------------------------------------------
# EOF
	fi

	cat << EOF > $frame
%%% --------------------------------------------------------------------------
\\begin{frame}
%-----------------------------------------------------------------------------

%%% --------------------------------------------------------------------------
\\frametitle{${frame%.tex}}
%-----------------------------------------------------------------------------

   Frame $__frame

%%% --------------------------------------------------------------------------
\\end{frame}
%-----------------------------------------------------------------------------
EOF

done

frame=frame-999.tex
cat << EOF > $frame
\\frame{
	Frame final
}
EOF
