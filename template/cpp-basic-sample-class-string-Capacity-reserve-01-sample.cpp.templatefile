// string::reserve
#include <iostream>
#include <fstream>
#include <string>

using namespace std;

int main ()
{
    string str;
    size_t filesize;

    ifstream file ("test.txt",ios::in|ios::end);
    filesize=file.tellg();

    str.reserve(filesize);

    file.seekg(0);

    while (!file.eof())
    {
        str += file.get();
    }

    cout << str;

    return 0;
}
