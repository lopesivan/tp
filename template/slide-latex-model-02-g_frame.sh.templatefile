#!/bin/bash
# ----------------------------------------------------------------------------
rm frame-*

for frame in $(echo frame-0.tex| sed ":a;s/\([^0-9]\)\([0-9]\{1,2\}\.\)/\10\2/;ta");
do
	__frame=${frame##frame-}
	__frame=${__frame%.tex}

	cat << EOF > $frame
% ---------------------------------------------------------------------- SLIDE

%%% --------------------------------------------------------------------------
\\mypart{Minha parte um}
%-----------------------------------------------------------------------------

%%% --------------------------------------------------------------------------
\\section{Secao um}
%-----------------------------------------------------------------------------

%%% --------------------------------------------------------------------------
\\mysubsection{Sub Secao um }
%-----------------------------------------------------------------------------

\\tableofcontents[hideallsubsections]
EOF

done

#-----------------------------------------------------------------------------

for frame in $(echo frame-1.tex| sed ":a;s/\([^0-9]\)\([0-9]\{1,2\}\.\)/\10\2/;ta");
do
	__frame=${frame##frame-}
	__frame=${__frame%.tex}

	cat << EOF > $frame
% ---------------------------------------------------------------------- SLIDE

%%% --------------------------------------------------------------------------
\\begin{frame}
%-----------------------------------------------------------------------------

%%% --------------------------------------------------------------------------
\\frametitle{${frame%.tex}}
%-----------------------------------------------------------------------------

%  \\tableofcontents[hideallsubsections]

   Frame $__frame

%%% --------------------------------------------------------------------------
\\end{frame}
%-----------------------------------------------------------------------------
EOF

done

